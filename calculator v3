            elif power7 == "no":
                while True:
                    operation = input("Enter a operation, e.g addition or subtraction. ")

                    def add(x, y):
                        return(x + y)
                    def subtraction(x, y):
                        return(x - y)
                    def multiply(x, y):
                        return(x * y)
                    def division(x, y):
                        return(x / y)
                        
                    if operation == "addition":
                        print(add(x, y))
                        break
                    elif operation == "subtraction":
                        print(subtraction(x, y))
                        break
                    elif operation == "multiplication":
                        print(multiply(x, y))
                        break
                    elif operation == "division":
                        if x == 0:
                            print("Cant divide by zero. ")
                            quit()
                        if y == 0:
                            print("Cant divide by zero. ")
                            quit()
                            
                        print(division(x, y))
                        break
                    elif operation == "factorial":
                        while True:
                            factorial = input("Make the 1st or 2nd number a factorial. ")

                            if factorial == "1st":
                                print(math.factorial(x))
                                break
                            elif factorial == "2nd":
                                print(math.factorial(y))
                                break
                            else:
                                print("Enter 1st or 2nd to select the first or second number you inputed. ")
                    elif operation == "compare":
                        if x == y:
                            print("The numbers are both equal since",x,"=",y)
                        elif x > y:
                            print("The first numbers is greater since",x,"is greater than",y)
                        elif y > x:
                            print("The second number is bigger since",y,"is greater than",x)
                    else:
                        print("Enter a valid operation. ")

